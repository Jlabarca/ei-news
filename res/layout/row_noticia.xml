<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rn_noticia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    >

    <LinearLayout
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="#004F9F">

        <ImageView
            android:id="@+id/rn_iv_image"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rn_tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Titulo de la Noticia"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp"
        android:textStyle="italic|bold"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/rn_ll_detalles"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:visibility="gone" >
        <TextView
            android:id="@+id/rn_tv_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen de la Noticia"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/rn_tv_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicado por: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rn_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20m"
            android:textAppearance="?android:attr/textAppearanceSmall" />
         <TextView
            android:id="@+id/rn_tv_imageurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
          <TextView
            android:id="@+id/rn_tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>